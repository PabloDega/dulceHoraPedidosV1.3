<h2 id="headListaSelect">
  <span>
    Lista de Precios <%=lista.replace(/[^0-9]/g, "")%>
  </span>
  <select name="lista" id="listaDePrecios">
      <%columnas.forEach((dato) => {
          let selected;
          if(lista === dato){
              selected = "selected";
          }
          let nombreDeLista = dato.replace(/[^0-9]/g, "");
          nombreDeLista = "Lista " + nombreDeLista%>
          <option value="<%=dato%>" <%=selected%>><%=nombreDeLista%></option>
      <%})%>
  </select>
</h2>
<table id="tablaProductos">
    <thead>
        <tr>
            <th>ID</th>
            <th>Código</th>
            <th>Categoría</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Unidad</th>
            <th>Sector</th>
            <th>Estado</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
      <% data.forEach((dato) => { 
        let estado = "baja"; 
        if(dato.estado == "true"){estado = "disponible"}; 
        %>
        <tr>
          <td><%= dato.id %></td>
          <td><%= dato.codigo %></td>
          <td><%= dato.categoria %></td>
          <td><%= dato.nombre %></td>
          <td><%= dato.descripcion %></td>
          <td>$<%= dato.costo %></td>
          <td><%= dato.unidad %></td>
          <td><%= dato.sector %></td>
          <td><%= estado %></td>
          <td class="backListaProdFabricaBoton backListaProdFabricaEditar" data-id="<%= dato.id %>">editar</td>
          <td class="backListaProdFabricaBoton backListaProdFabricaEliminar" data-id="<%= dato.id %>" data-tipo="productosFabrica">eliminar</td>
        </tr>
      <%}); %>
    </tbody>
</table>

<script defer src="/script/productosFabrica.js"></script>